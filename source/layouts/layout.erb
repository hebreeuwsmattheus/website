      <span>Hoofstukken: </span>
      <ul>
        <% (1..6).each do |n| %>
          <li><%= link_to n.to_s, "/chapters/#{n}.html", :class => (current_page.path == "chapters/#{n}.html" ? 'chapter-link active' : 'chapter-link') %></li>
        <% end%>
